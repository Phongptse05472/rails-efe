<head>
  <%= content_for :page_title, 'My profile' %>
  <%= stylesheet_link_tag 'profile', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= cloudinary_js_config %>
</head>
<div class="right">
    <div class="profile-page">
    <% @customer.each do |customer| %>
      <div class="avatar">
        <% if !customer.avatar.nil? %>
          <%= cl_image_tag(customer.avatar) %>
        <% else %>
          <%= image_tag('profile.png') %>
        <% end %>
      </div>
      <table>
        <tr>
          <th>Email</th>
          <td><input type="text" value="<%= customer.email %>" disabled></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><input type="text" value="<%= customer.name %>" disabled></td>
        </tr>
        <tr>
          <th>Phone Number</th>
          <td><input type="text" value="<%= customer.phone_number %>" disabled></td>
        </tr>
        <tr>
          <th>Status</th>
          <td>
            Active
            <i class="fa fa-check-circle" style="color: deepskyblue;"></i>
          </td>
        </tr>
    </table>
    <%=  link_to "Update profile", edit_customer_path(customer) ,class: "logout" %>
<!--    <a class="logout" href="homepage.html">Log out</a>-->
    <% end %>

  </div>

  <div class="end">
  </div>
</div>