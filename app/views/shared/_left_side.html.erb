<div class="left">
  <h2>Menu</h2>
  <ul class="top">
    <li>
      <a href="/home">
        <i class="fa fa-home"></i> Home Page
      </a>
    </li>
    <% if !current_user.present? %>
      <li>
        <a href="login.html">
          <i class="fa fa-sign-in"></i> Sign up
        </a>
      </li>
      <li>
        <a href="signup.html">
          <i class="fa fa-user-circle-o"></i> Sign up
        </a>
      </li>
    <% else %>
      <li>
        <a href="/customers_courses">
          <i style="color: #2bc3cc;" class="fa fa-user-circle-o"></i> My Course
        </a>
      </li>
      <li>
        <i style="color: #2bc3cc;" class="fa fa-user-circle-o"></i> Your Course
      </li>
      <% course.each do |a| %>
        <li>
          <%= link_to a.name, course_path(a.slug) %>
        </li>
      <% end %>
    <% end %>

  </ul>
  <h2>Topics</h2>
  <ul class="top">
    <% data.each do |c| %>
      <li>
        <div>
          <%= link_to c.name, topic_path(c.slug) %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
