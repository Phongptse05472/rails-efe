<div class="left">
  <h2>Menu</h2>
  <ul class="top">
    <li>
      <% if !current_user.present? %>
        <a href="/home">
          <i class="fa fa-home"></i> Home Page
        </a>
      <% else %>
        <a href="/user-home">
          <i class="fa fa-home"></i> Home Page
        </a>
      <% end %>
    </li>
    <% if !current_user.present? %>
      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-user-circle-o"></i> Sign in
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path do %>
          <i class="fa fa-user-circle-o"></i> Sign up
        <% end %>
      </li>
    <% else %>
      <li>
        <a href="/customers_courses">
          <i class="fa fa-user-circle-o"></i> My Course
        </a>
      </li>
<!--      <li>-->
<!--        <i class="fa fa-user-circle-o"></i> Your Course-->
<!--      </li>-->
    <% end %>
  </ul>
  <% if current_user.present? %>
    <h2>Follow</h2>
    <ul class="top">
      <% course.each do |a| %>
        <li>
          <%= link_to course_path(a.slug) do %>
            <i class="fa fa-graduation-cap"></i>
            <%= a.name %>
          <% end %>
        </li>
      <% end %>
      <li class="show">
        <a href="mycourse.html">
          <i class="fa fa-sort-down"></i>Show all
        </a>
      </li>
    </ul>
  <% end %>
  <% if !current_user.present? %>
    <h2>Topics</h2>
    <ul class="top">
      <% data.each do |c| %>
        <li>
          <%= link_to topic_path(c.slug) do %>
            <i class="fa fa-graduation-cap"></i>
            <%= c.name %>
          <% end %>
        </li>
      <% end %>
      <li class="show">
        <a href="mycourse.html">
          <i class="fa fa-sort-down"></i>Show all
        </a>
      </li>
    </ul>
  <% else %>
  <% end %>
</div>
