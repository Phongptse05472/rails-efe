<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :courseID %>
    <%= form.number_field :courseID %>
  </div>

  <div class="field">
    <%= form.label :articleTitle %>
    <%= form.text_field :articleTitle %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :tag %>
    <%= form.text_field :tag %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.time_select :duration %>
  </div>

  <div class="field">
    <%= form.label :numberComplete %>
    <%= form.number_field :numberComplete %>
  </div>

  <div class="field">
    <%= form.label :isFree %>
    <%= form.check_box :isFree %>
  </div>

  <div class="field">
    <%= form.label :linkFileAttach %>
    <%= form.text_area :linkFileAttach %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
