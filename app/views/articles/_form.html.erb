<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :CourseID %>
    <%= form.number_field :CourseID %>
  </div>

  <div class="field">
    <%= form.label :ArticleTitle %>
    <%= form.text_field :ArticleTitle %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :Description %>
  </div>

  <div class="field">
    <%= form.label :Tag %>
    <%= form.text_field :Tag %>
  </div>

  <div class="field">
    <%= form.label :Duration %>
    <%= form.time_select :Duration %>
  </div>

  <div class="field">
    <%= form.label :NumberComplete %>
    <%= form.number_field :NumberComplete %>
  </div>

  <div class="field">
    <%= form.label :IsFree %>
    <%= form.check_box :IsFree %>
  </div>

  <div class="field">
    <%= form.label :LinkFileAttach %>
    <%= form.text_area :LinkFileAttach %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
