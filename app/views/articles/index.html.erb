<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link article</th>
      <th>Tag</th>
      <th>Duration</th>
      <th>Number complete</th>
      <th>Is free</th>
      <th>Link attach file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.link_article %></td>
        <td><%= article.tag %></td>
        <td><%= article.duration %></td>
        <td><%= article.number_complete %></td>
        <td><%= article.is_free %></td>
        <td><%= article.link_attach_file %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
