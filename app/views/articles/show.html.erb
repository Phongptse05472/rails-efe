<head>
  <%= content_for :page_title, 'Play article' %>
  <%= stylesheet_link_tag 'watch', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%#= stylesheet_pack_tag 'watch', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="main-watch">
  <div class="watch">
    <% @article_detail.each do |article| %>
      <div class="video">
        <div id="media_player">
          <iframe style="display: inline-block" class="embed-responsive-item" src="https://content.jwplatform.com/videos/nYLOnbr9-nelUuFNS.mp4;autoplay=1"
                  width="100%" height="500" frameborder="2" allowfullscreen="">
          </iframe>
        </div>
      </div>
      <div class="w-title">
        <h2>
          <%= article.title %>
        </h2>
        <p>
          <%= article.view_number %> view • <%= article.created_at.to_date %>
        </p>

        <%# if @show_favor_button == false %>
        <%= button_to add_to_favor_path(article.id), method: :post do %>
          "Favor" <i class="fa"></i>
        <% end %>
        <%# else %>
        <!--          Liked video-->
        <%# end %>

      </div>
      <div class="w-description">
        <div class="w-icon">
          <%= image_tag('2.jpg') %>
        </div>
        <div class="w-author">
          <h2>Khóa học lập trình Java</h2>
          <p><%= article.author %></p>
          Link attach:  <%= article.link_file_attach %>
          <p>
            <%= article.description %>
          </p>
          <p><%= article.tag_name %></p>
        </div>
      </div>
      <div class="w-information">
      </div>

      <div class="comment">
        <div class="account-input">
          <div class="user-icon">
            <%= image_tag('course_9.jpg') %>
          </div>
          <div class="user-input">

            <!--            <input class="input_comment" type="text" placeholder="Viết bình luận">-->
            <!--            <input type="submit" value="Comment">-->
            <!--            <input type="button" onclick="resetForm()" value="Cancel">-->
            <!--          </form>-->

            <%= form_for(@comment, html: {class: "input_comment", role: "form", :id => "form_comment"}, url: comment_path, method: :post, remote: true) do |f| %>
              <div class="input_comment">
                <%= f.hidden_field :customer_id, value: current_user.id %>
                <%= f.hidden_field :article_id, value: article.id %>
                <%= f.text_field :content %>
                <%= f.submit %>
              </div>
            <% end %>
          </div>
        </div>

        <%= @comment_user.each do |comment| %>
          <div class="user-comment">
            <div class="user-icon">
              <%= image_tag('course_9.jpg') %>
            </div>
            <div class="user-right">
              <div class="user-name">
                <%= comment.customer.name %>
              </div>
              <div class="u-comment">
                <%= comment.content %>
              </div>
            </div>
            <div class="comment_pin">
              <i class="fa fa-check"></i>
            </div>
          </div>
        <% end %>
    <% end %>
    </div>
  </div>
  <div class="list">
    <div class="list-video">
      <ul>
        <% @list_article_right.each do |a| %>
          <li>
            <div class="l-left">
              <%= image_tag('course_9.jpg') %>
            </div>
            <div class="l-right">
              <div class="l-title">
                <%= link_to a.title, course_article_path(params[:course_slug], a.id) %>
              </div>
              <div class="l-author">
                <%= a.author %>
              </div>
              <div class="l-view">
                <%= a.view_number %> views
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <h1>Recommend for you</h1>
    <div class="list-video">
      <ul>

      </ul>
    </div>
  </div>
</div>
<div class="footer">

</div>
