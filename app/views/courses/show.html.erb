<p id="notice"><%= notice %></p>

<head>
  <title>course of topic</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag 'course_detail', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'course_detail', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<div class="main">
  <%= render partial: "layouts/left_side", locals: {data: @data} %>
  <div class="right">
    <div class="top">
      <h1><%= @course.name %></h1>
      <span>by</span>
      <span><%= @course.author %></span>
      <div class="intro">
        <%= image_tag('java_script.jpg') %>
        <span><%= @course.description %> <br> <br></span>
        <br>
        <br>
      </div>
      <p>Progress(80%)</p>
      <progress max="100" value="80"></progress>
    </div>
    <div class="buttom">
      <h2>List Article in '<%= @course.name %>'</h2>
      <% @list_article.each do |a| %>
        <div class="per-course">
          <div class="c-left">
            <a href="#">
              <%= image_tag('blog_images_1.jpg') %>
            </a>
          </div>
          <div class="c-right">
            <h2>
              <%= link_to a.title, play_article_path(a.id) %>
            </h2>
            <span><%= a.description %></span>

          </div>
        </div>
      <% end %>

    </div>
    <div class="paging">
      <a href="#">
        <i class="fa fa-caret-left"></i>
      </a>
      <a href="#">1</a>
      <a href="#">2</a>
      <a href="#">3</a>
      <a href="#">4</a>
      <a href="#">5</a>
      <a href="#">
        <!--        <i class="fa fa-caret-right"></i>-->
      </a>
    </div>
    <div class="end">
    </div>
  </div>
</div>




