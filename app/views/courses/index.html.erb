<!DOCTYPE html>
<html>
<%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>

<head>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link rel="icon" href="../logo/logo_1.PNG">


</head>

<body>
<div class="container">
  <div class="menu">
    <div class="logo">
      <a href="userhome.html">
        <%= image_tag("logo_1.PNG") %>
        <span>Edfective</span>
      </a>
    </div>
    <div class="search">
      <input type="text" placeholder="Tìm kiếm">
      <button>
        <%= image_tag("search.png") %>
      </button>
    </div>
    <div class="user">
      <a class="login" href="login.html">Sign in</a>
      <a class="signup" href="signup.html">Sign up</a>
    </div>
  </div>
  <div class="main">
    <%= render partial: "layouts/left_side", locals: {courses: @left_side_courses} %>


    <div class="right">
      <h1>Hot Course</h1>
      <div id="exampleSlider1">
        <div class="MS-content">
          <% @courses.each do |course| %>
            <div id="item" class="item">
              <div class="thumbnai">
                <% if course.image.attached? %>
                  <%= image_tag(course.image) %>
                <% else %>
                  <%= image_tag('khoa_hoc_2.jpg') %>
                <% end %>
              </div>
              <div class="author">
                <div class="icon">
                  <%= image_tag("2.jpg", alt: "") %>
                </div>
                <div class="title">
                  <div class="name">
                    <%= course.name %>
                  </div>
                  <p><%= course.author %></p>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star-half-o checked"></span>
                  <span class="fa fa-star-o checked"></span>
                  <span><%= course.rate %></span> <span>(<%= course.number_enrollment %>)</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="MS-controls">
          <button class="MS-left"><i class="fa fa-chevron-left"></i></button>
          <button class="MS-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        </div>
      </div>
      <h1>Top Course</h1>
      <div id="exampleSlider">
        <div id="top" class="MS-content">
          <% @rate_course.each do |rate_course| %>
            <div id="item" class="item">
              <div class="thumbnai">
                <% if rate_course.image.attached? %>
                  <%= image_tag(rate_course.image) %>
                <% else %>
                  <%= image_tag('khoa_hoc_2.jpg') %>
                <% end %>
              </div>
              <div class="author">
                <div class="icon">
                  <img src="../image/2.jpg" alt="">
                </div>
                <div class="title">
                  <div class="name">
                    <%= rate_course.name %>
                  </div>
                  <p><%= rate_course.author %></p>

                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span><%= rate_course.rate %></span> <span>  <%= rate_course.number_enrollment %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="MS-controls">
          <button class="MS-left"><i class="fa fa-chevron-left"></i></button>
          <button class="MS-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        </div>
      </div>
      <h1>Top views article</h1>
      <div id="exampleSlider2">
        <div id="topView" class="MS-content">
          <% @top_view_article.each do |article| %>
            <div id="item" class="item">
              <div class="thumbnai">
                <%= image_tag('java.png') %>
              </div>
              <div class="author">
                <div class="icon">
                  <img src="../image/2.jpg" alt="">
                </div>
                <div class="title">
                  <div class="name">
                    <%= article.title %>
                  </div>
                  <p><%= article.author %></p>
                  <span><%= article.view_number %>lượt xem</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="MS-controls">
          <button class="MS-left"><i class="fa fa-chevron-left"></i></button>
          <button class="MS-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        </div>
      </div>
      <h1>Free Course</h1>
      <div id="exampleSlider3">
        <div id="free" class="MS-content">
          <% @free_course.each do |free_course| %>
            <div id="item" class="item">
              <div class="thumbnai">
                <% if free_course.image.attached? %>
                  <%= image_tag(free_course.image) %>
                <% else %>
                  <%= image_tag('khoa_hoc_2.jpg') %>
                <% end %>
              </div>
              <div class="author">
                <div class="icon">
                  <%= image_tag('2.jpg') %>
                </div>
                <div class="title">
                  <div class="name">
                    <%= free_course.name %>
                  </div>
                  <p><%= free_course.author %></p>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span class="fa fa-star checked"></span>
                  <span>(<%= free_course.number_enrollment %>)</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="MS-controls">
          <button class="MS-left"><i class="fa fa-chevron-left"></i></button>
          <button class="MS-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        </div>
      </div>
      <div class="end">
      </div>
    </div>

  </div>

</div>

<!--<script src="//code.jquery.com/jquery-3.3.1.min.js"></script>-->
<!--<script src="//code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>-->

<script src="../js/jquery-2.2.4.min.js"></script>

<!-- Include Multislider -->
<script src="../js/multislider.min.js"></script>

<!-- Initialize element with Multislider -->
<script>
    $('#exampleSlider').multislider({
        interval: 100000,
        continuous: false
    });
    $('#exampleSlider1').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider2').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider3').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider4').multislider({
        interval: 10000,
        continuous: false
    });
    // {
    //     interval: 8000,
    //     slideAll: true,
    //     duration: 1500
    // });
</script>
</body>

</html>


