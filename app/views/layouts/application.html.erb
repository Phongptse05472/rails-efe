<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application' "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Edfective.vn - Homepage</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>

</head>
<body>
<div class="container-fluid">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</div>
<div class="container">

  <div id="header">
    <div class="menu">
      <div class="logo">
        <a href="/home">
          <%= image_tag("logo_1.PNG") %>
          <span>Edfective</span><span style="color: #14bdee;">ly</span>
        </a>
      </div>
      <div class="search">
        <input type="text" placeholder="Search">
        <button>
          <%= image_tag("search.png") %>
        </button>
      </div>

      <% if   @devise_current_user.nil? %>
        <div class="user">
          <a href="#" id="myBtn">
            <i onmouseover="myfunction()" onclick="myfunction()" class="fa fa-bell"></i>
          </a>
          <div id="notifications" style="margin-top: 13px;">
            <h3>Notifications</h3>
            <div style="height:200px;"></div>
          </div>
          <a href="profile.html" class="profile"><%= image_tag('1.jpg') %></a>
        </div>
      <% else %>
        <div class="user">
          <a class="login" href="login.html">Sign in</a>
        </div>
        <a class="signup" href="signup.html">Sign up</a>
      <% end %>
    </div>
  </div>

  <%= yield %>
  <div id="footer">
  </div>
</div>
</body>
</html>
