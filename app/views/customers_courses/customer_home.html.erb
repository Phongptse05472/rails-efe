<%= content_for :page_title, 'User home' %>
<div class="right">
  <h1>Your Course</h1>
  <div id="exampleSlider">
    <div id="app1" class="MS-content">
      <% @my_courses.each do |my_courses| %>
        <div id="item" class="item">
          <div class="thumbnai">
            <a href="watch.html"><%= image_tag('java_script.jpg') %></a>
          </div>
          <div class="author">
            <div class="icon">
              <%= image_tag('2.jpg') %>
