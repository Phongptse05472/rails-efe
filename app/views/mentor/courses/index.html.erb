<% @show_leftside = true%>
<head>
  <title>Edfective.vn - favorite video</title>
  <%= stylesheet_link_tag 'list-course', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="right">
  <h1>
    Webcome back !adam
  </h1>
  <% @mentor_course.each do |mentor_course| %>
    <span>Course name: <%= mentor_course.name %></span>
    <a class="upload" href="#">Upload video</a>
    <div id="exampleSlider1">
      <div class="MS-content">
        <% @list_article_mentor = Article.joins(:course_articles).where('course_id = ?', mentor_course.id).order(:created_at) %>
        <% @list_article_mentor.each do |article| %>
          <div id="item" class="item per_article">
            <div class="article-left">
              <%= image_tag('course_2.jpg') %>
            </div>
            <div class="article-right">
              <%= link_to article.title, click_on_article_path(mentor_course.slug, article.id) %>
              <p><%= article.description %></p>
            </div>
            <a href="#">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </a>
          </div>
        <% end %>
      </div>
      <div class="MS-controls">
        <button class="MS-left"><i class="fa fa-chevron-left"></i></button>
        <button class="MS-right"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
      </div>
    </div>
  <% end %>


  <div class="paging paging_upload">
    <%== pagy_nav(@pagy) %>

  </div>
  <hr>
  <h1>Preference video upload</h1>
  <div class="list-article">
<% @ref_article.each do |ref_article|  %>
    <div id="item" class="item per_article_below">
      <div class="article-left">
        <%= image_tag('course_2.jpg') %>
      </div>
      <div class="article-right">
       <%= ref_article.title %>
        <p><%= ref_article.description %></p>
      </div>
    </div>
<% end %>

  </div>
  <div class="paging_upload_article">
    <a href="#">
      <i class="fa fa-chevron-down" aria-hidden="true"></i> Show more...

    </a>


  </div>
  <div class="end">
  </div>
</div>
<script>
    $('#exampleSlider').multislider({
        interval: 100000,
        continuous: false
    });
    $('#exampleSlider1').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider2').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider3').multislider({
        interval: 10000,
        continuous: false
    });
    $('#exampleSlider4').multislider({
        interval: 10000,
        continuous: false
    });
</script>
</body>
