<%= content_for :page_title, 'Favor article' %>
<body>
<div class="right">
  <h1>
    My course
  </h1>
  <div class="menu-course">
    <ul>
      <li>
        <%= link_to "My courses", "/customers_courses"%>
      </li>
      <li>
        <%= link_to "Archive course", "/archived-courses" %>
      </li>
      <li>
        <%= link_to "Favor article", "/customers_articles",class:'active' %>
      </li>
    </ul>
  </div>
  <div class="list-course">
    <% @favor_article.each do |favor_article| %>
      <div class="per-course" id="article_id<%= favor_article.article_id %>">
        <div class="c-left">
          <%= image_tag('course_3.jpg') %>
        </div>
        <div class="c-right">
          <%= link_to  update_favor_path(favor_article.article_id, article_like: true), method: :post, remote: true do %>
            <i  class="fa fa-heart"  aria-hidden="true"></i>
          <% end %>
          <h2><%= link_to favor_article.title, course_article_path(favor_article, favor_article.id) %></h2>
          <p><%= favor_article.description %></p>
          <p class="my-name">Author: <%= favor_article.author %></p>
          <p class="video_course">Course: Lập trình Java cơ bản</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="paging">
    <% if @favor_article.ids.count.to_int >= 5 %>
      <%== pagy_nav(@pagy) %>
    <% else %>
    <% end %>
  </div>

  <div class="end">
  </div>
</div>

</body>
