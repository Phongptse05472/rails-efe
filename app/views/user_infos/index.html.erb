<p id="notice"><%= notice %></p>

<h1>User Infos</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Phone number</th>
      <th>Roll number</th>
      <th>Avata</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_infos.each do |user_info| %>
      <tr>
        <td><%= user_info.role_id %></td>
        <td><%= user_info.name %></td>
        <td><%= user_info.phone_number %></td>
        <td><%= user_info.roll_number %></td>
        <td><%= user_info.avata %></td>
        <td><%= user_info.is_active %></td>
        <td><%= link_to 'Show', user_info %></td>
        <td><%= link_to 'Edit', edit_user_info_path(user_info) %></td>
        <td><%= link_to 'Destroy', user_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

