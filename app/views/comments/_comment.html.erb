<div class="user-comment">
  <div class="user-icon">
    <%= image_tag('course_9.jpg') %>
  </div>
  <div class="user-right">
    <div class="user-name">
      <%= comment.customer.name %>
    </div>
    <div class="u-comment">
      <%= comment.content %>
    </div>
  </div>

  <% current_role = Customer.where("user_id = ? AND role_id = 2", current_user.id) %>
  <% if !current_role.blank? %>
    <div class="comment_pin">
      <%= link_to update_comment_print_path(comment.id), method: :post, remote: true do %>
        <%# binding.pry %>
        <i class="fa fa-check" onclick="bookmark(this)"  aria-hidden="true"></i>
      <% end %>
    </div>
  <% else %>

  <% end %>

</div>